<ul class="collection with-header">
  <li class="collection-header">
    <h4>Help List</h4>
  </li>

  <li v-for="helpUser in helpUsers" class="collection-item">
    <div v-if="admin && helpUser.in_lab" class="in-lab">{{ helpUser.name }}</div>
    <div v-else>{{ helpUser.name }}</div>

    <div>
        {{ helpUser.subject }}
    </div>
    <div>
      <% if (admin) { %>
      <a href="#" v-on:click="adminRemoveHelp(helpUser.name)">remove</a>
      <% } else { %>
      <a v-if="helpUser.name === user.name" href="#" v-on:click="removeHelp()">
        remove
      </a>
      <% } %>
    </div>
  </li>

  <% if (!admin) { %>
  <li v-if="!onList" class="collection-item">
    <!-- <a href="#" v-on:click="joinHelp()">Join Help List</a> -->
    <form class="row" v-on:submit.prevent="joinHelp">
      <input class="col s6" required v-model="user.subject" placeholder="Subect">
      <button class="join col s6" type="submit">Join Help List</button>
    </form>
  </li>
  <% } %>

</ul>